.container
  .page-header
    .pull-right
      = link_to 'New Task', new_task_path, class: "btn btn-info"
    %h1 Tasks
  %table.table
    %thead
      %tr
        %th Description
        %th Due On
    %tbody
      - @tasks.each do |tasks|
        %tr
          %td
            - if tasks.complete
              %u
                %s= link_to tasks.description, task_path(tasks)
            - else
              %u= link_to tasks.description, task_path(tasks)
          %td
            - if tasks.due_date
              = tasks.due_date.strftime("%m/%d/%Y")
          %td
            .pull-right
              = link_to "Edit", edit_task_path(tasks), class: "btn btn-info"
              = link_to "Delete", task_path(tasks), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete"}
