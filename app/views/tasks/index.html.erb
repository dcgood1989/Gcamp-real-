<div class='container'>
  <div class="page-header">
    <h1>Listing Tasks</h1>
  </div>

<% @tasks.each do |task| %>
<p>
  <b>Description: </b><%= task.description %>
  <u><%= link_to "Delete", task_path(task), method: :delete, data: {confirm: "Are you sure you want to delete"} %></u>
</p>

<% end %>
<u><%= link_to "New Task", new_task_path %></u>
