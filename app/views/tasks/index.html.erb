<div class="container">
 <div class="page-header">
   <div class="pull-right">
     <%= link_to 'New Task', new_task_path, class: "btn btn-info" %>
   </div>
   <h1>Tasks</h1>
 </div>

 <table class= "table">
   <thead>
     <tr>
       <th> Description </th>
     </tr>
   </thead>
   <tbody>
   <% @tasks.each do |tasks| %>
   <tr>
     <td><%= link_to tasks.description, tasks_path(tasks) %>
         <div class= "pull-right">
           <%= link_to "Edit", edit_task_path(tasks), class: "btn btn-info" %>
           <%= link_to "Delete", task_path(tasks), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete"}%>
         </div>
     </td>
   </tr>
    <% end %>
   </tbody>
 </table>

</div>
