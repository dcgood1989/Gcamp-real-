.container
  .row
    .col-md-7
      %h1
        - if @task.complete == true
          %s
            = @task.description
        - else
          = @task.description

    .col-md-3
      %h1
        - if @task.due_date
          = @task.due_date.strftime("%m/%d/%Y")

    .col-md-2
      .pull-right
        = link_to "Edit", edit_task_path, class: "btn btn-info margin-top-button"

  %ol.breadcrumb
    %li
      = link_to "Tasks", tasks_path
    %li.active= @task.description
