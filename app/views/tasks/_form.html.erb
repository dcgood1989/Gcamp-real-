<div class='container'>

 <%= form_for @task, html: {class: "form-horizontal"} do |f| %>

  <div class="form-group">
    <%= f.label :description, class: "col-md-1 control-label" %>
    <div class="col-md-3">
      <%= f.text_field :description, class: "form-control", placeholder: "Description" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-md-6">
      <%= f.submit class: "btn btn-primary"%>
      <%= link_to "Cancel", tasks_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
</div>
