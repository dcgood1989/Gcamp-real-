.container
  %table.table
    .pull-right
      = link_to "New Project", new_project_path, class: "btn btn-info margin-top-button2"
    .page-header
      %h1 Projects
    %table.table
      %thead
        %tr
          %th
            %b Name
          %th
            %b Tasks
      %tbody
        - @projects.each do |project|
          %tr
            %td
              = link_to project.name, project_path(project)
            %td
              = link_to project.tasks.count, project_tasks_path(project, @task)  
