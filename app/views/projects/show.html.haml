.container
  .page-header
    = link_to "Delete", project_path(@project), class: "btn btn-danger pull-right margin-left-button", method: :delete, data: {confirm: "Are you sure you want to delete"}
    = link_to "Edit", edit_project_path, class: "btn btn-primary pull-right"
    %h1= @project.name

  %ol.breadcrumb
    %li
      = link_to "Projects", projects_path
    %li.active
      = @project.name

  - if @project.tasks.count == 2
    = link_to "#{@project.tasks.count} Task", project_tasks_path(@project)
  - else
    = link_to "#{@project.tasks.count} Tasks", project_tasks_path(@project)
